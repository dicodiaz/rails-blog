<h2>Sign up</h2>
<%= bootstrap_form_with(model: resource, scope: resource_name, url: registration_path(resource_name), method: :post) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
  <%= f.password_field :password, autocomplete: "new-password", hide_label: true %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  <div class="d-flex justify-content-center">
    <%= f.submit "Sign up", class: "btn btn-primary w-100 mb-3" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
