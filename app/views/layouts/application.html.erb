<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main role="main" class="container mt-3">
      <% flash.each do |key, message| %>
        <div class="alert <%= flash_class(key) %> text-center" role="alert">
          <%= message %>
        </div>
      <% end %>
      <% if current_user %>
        <%= button_to("Log Out", destroy_user_session_path, method: :delete, class: "btn btn-danger mb-3") %>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
